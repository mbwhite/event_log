{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, 
    "forceConsistentCasingInFileNames": true, 
    "declaration": true, 
    "sourceMap": true, 
    "moduleResolution": "node16",
    "outDir": "dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
